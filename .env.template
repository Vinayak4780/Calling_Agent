# LiveKit AI Agent Environment Variables
# IMPORTANT: Replace all "REPLACE_WITH_YOUR_ACTUAL_" values with your real API keys

# LiveKit Configuration (for full LiveKit mode - optional)
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
LIVEKIT_API_KEY=REPLACE_WITH_YOUR_ACTUAL_LIVEKIT_API_KEY
LIVEKIT_API_SECRET=REPLACE_WITH_YOUR_ACTUAL_LIVEKIT_API_SECRET

# Deepgram STT Configuration (REQUIRED)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=REPLACE_WITH_YOUR_ACTUAL_DEEPGRAM_API_KEY
DEEPGRAM_MODEL=nova-2-phonecall
DEEPGRAM_LANGUAGE=en-US

# Groq LLM Configuration (REQUIRED)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=REPLACE_WITH_YOUR_ACTUAL_GROQ_API_KEY
GROQ_MODEL=llama3-8b-8192

# ElevenLabs TTS Configuration (REQUIRED)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=REPLACE_WITH_YOUR_ACTUAL_ELEVENLABS_API_KEY
ELEVENLABS_VOICE_ID=REPLACE_WITH_YOUR_ACTUAL_VOICE_ID

# Agent Configuration
TARGET_LATENCY=2.0
METRICS_FILE=./metrics/session_metrics.xlsx
